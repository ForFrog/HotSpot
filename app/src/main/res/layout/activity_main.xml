<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/layout_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd" />

    <com.chaychan.library.BottomBarLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconHeight="@dimen/px36"
            app:iconNormal="@drawable/homeicon"
            app:iconSelected="@drawable/homeiconselected"
            app:iconWidth="@dimen/px36"
            app:itemMarginTop="@dimen/px2"
            app:itemText="首页"
            app:itemTextSize="12sp"
            app:textColorNormal="#9e9e9e"
            app:textColorSelected="#757575" />

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconHeight="@dimen/px36"
            app:iconNormal="@drawable/knowledgeicon"
            app:iconSelected="@drawable/knowledgenselected"
            app:iconWidth="@dimen/px36"
            app:itemMarginTop="@dimen/px2"
            app:itemText="体系"
            app:itemTextSize="12sp"
            app:textColorNormal="#9e9e9e"
            app:textColorSelected="#757575" />


        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconHeight="@dimen/px36"
            app:iconNormal="@drawable/projecticon"
            app:iconSelected="@drawable/projectselected"
            app:iconWidth="@dimen/px36"
            app:itemMarginTop="@dimen/px2"
            app:itemText="项目"
            app:itemTextSize="12sp"
            app:textColorNormal="#9e9e9e"
            app:textColorSelected="#757575" />

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconHeight="@dimen/px36"
            app:iconNormal="@drawable/mineicon"
            app:iconSelected="@drawable/mineselected"
            app:iconWidth="@dimen/px36"
            app:itemMarginTop="@dimen/px2"
            app:itemText="我的"
            app:itemTextSize="12sp"
            app:textColorNormal="#9e9e9e"
            app:textColorSelected="#757575" />

    </com.chaychan.library.BottomBarLayout>


</LinearLayout>